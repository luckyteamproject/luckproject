<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC 
"-//Apache Software Foundation//DTD Tiles Configuration 

2.1//EN" 
"http://tiles.apache.org/dtds/tiles-config_2_1.dtd" >

<tiles-definitions>
<!-- 	메인 템플릿 -->
<!-- name="" 로 확장자 호출 -->
	<definition template="/WEB-INF/views/layout/main.jsp" name=".layoutA">
	<put-attribute name="hearder" value="/WEB-INF/views/layout/hearder.jsp"/>
	<put-attribute name="left" value="/WEB-INF/views/layout/left.jsp"/>
	<put-attribute name="content" value=""/>
	<put-attribute name="footder" value="/WEB-INF/views/layout/footder.jsp"/>
	</definition>
	
<!-- 	사이트 전체 레이아웃 -->
	<definition name="*/*.lu.layoutC" extends=".layoutA">
	<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp"/>
	</definition>
	
	<definition name="*/*/*.lu.layoutC" extends=".layoutA">
	<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
	</definition>
	
	<definition name="*/*/*/*.lu.layoutC" extends=".layoutA">
	<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}/{4}.jsp"/>
	</definition>
	
	
<!-- 	처음 로그인(signForm.jsp) 할 때 레이아웃임 -->
	<definition template="/WEB-INF/views/sign/signLayout.jsp" name=".layoutS">
	<put-attribute name="content" value=""/>
	</definition>
	
	<definition name="*/*.lu.layoutS" extends=".layoutS">
	<put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp"/>
	</definition>
<!-- 	=================== -->
</tiles-definitions>